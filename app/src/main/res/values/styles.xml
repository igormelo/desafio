<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Views Styles -->
    <style name="textDefaultStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="textTitle" parent="textDefaultStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="textDescription" parent="textDefaultStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="textNumericInfo" parent="textDefaultStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="textUsername" parent="textDefaultStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="textUserFullName" parent="textDefaultStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>